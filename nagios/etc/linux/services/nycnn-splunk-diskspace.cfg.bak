define service{
        use                             generic-service         ; Name of service template to use
	host_name			nycnn-splunk
        service_description             Disk Space on /opt
        normal_check_interval           1
        contacts			unixadmin
	notification_interval		120
        notification_options            w,c,r
        #check_command                   check_by_ssh!20!10!/opt
	#command_name			check_by_ssh
	command_line			$USER1$/check_by_ssh -H nycnn-splunk -p $ARG1$ -C "$ARG2$ $ARG3$ $ARG4$ $ARG5$ $ARG6$" 
}
